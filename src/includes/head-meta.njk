{% set pageTitle = title or site.title %}
{% if title and title != site.title %}
  {% set documentTitle = pageTitle + ' Â· ' + site.title %}
{% else %}
  {% set documentTitle = site.title %}
{% endif %}
{% set pageDescription = description or site.description %}
{% set canonicalUrl = site.url ~ (page.url or '/') %}
<title>{{ documentTitle }}</title>
<meta name="description" content="{{ pageDescription }}">
{% if page.url == '/impressum/' or page.url == '/privacy/' %}<meta name="robots" content="noindex, nofollow">{% endif %}
<link rel="canonical" href="{{ canonicalUrl }}">
<meta property="og:site_name" content="{{ site.title }}">
<meta property="og:title" content="{{ pageTitle }}">
<meta property="og:description" content="{{ pageDescription }}">
<meta property="og:type" content="{% if layout == 'story.njk' %}article{% else %}website{% endif %}">
<meta property="og:url" content="{{ canonicalUrl }}">
{% if site.socialImage %}
  <meta property="og:image" content="{{ site.url ~ site.socialImage }}">
{% endif %}
<meta property="og:locale" content="{{ site.locale }}">
{% if layout == 'story.njk' %}
<meta name="author" content="{{ site.author.name }}">
<meta property="article:author" content="{{ site.author.url }}">
<meta property="article:published_time" content="{{ site.publishedAt }}">
<meta property="article:modified_time" content="{{ site.modifiedAt }}">
{% endif %}
{% if site.socialImage %}
  <meta name="twitter:card" content="summary_large_image">
{% else %}
  <meta name="twitter:card" content="summary">
{% endif %}
<meta name="twitter:title" content="{{ pageTitle }}">
<meta name="twitter:description" content="{{ pageDescription }}">
{% if site.socialImage %}
  <meta name="twitter:image" content="{{ site.url ~ site.socialImage }}">
{% endif %}
<link rel="icon" href="/favicon.ico">
<link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180">
<link rel="manifest" href="/site.webmanifest">
{% if layout == 'story.njk' %}
{% set schema = {
  "@context": "https://schema.org",
  "@type": "CreativeWork",
  "name": pageTitle,
  "author": {
    "@type": "Person",
    "name": site.author.name,
    "url": site.author.url
  },
  "description": pageDescription,
  "inLanguage": site.language,
  "license": "https://creativecommons.org/licenses/by-nc-sa/4.0/",
  "url": canonicalUrl,
  "datePublished": site.publishedAt,
  "dateModified": site.modifiedAt
} %}
{% else %}
{% set schema = {
  "@context": "https://schema.org",
  "@type": "CreativeWork",
  "name": pageTitle,
  "author": {
    "@type": "Person",
    "name": site.author.name,
    "url": site.author.url
  },
  "description": pageDescription,
  "inLanguage": site.language,
  "license": "https://creativecommons.org/licenses/by-nc-sa/4.0/",
  "url": canonicalUrl
} %}
{% endif %}
<script type="application/ld+json">{{ schema | json | safe }}</script>
