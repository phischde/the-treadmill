{% extends "./base.njk" %}

{% block content %}
<article class="story" data-progress-target>
  <section class="hero" data-observe>
    <div class="hero__media">
      {% if hero and hero.image %}
        {% image hero.image, hero.alt or '' , {
          sizes: "(min-width: 1200px) 460px, (min-width: 900px) 40vw, (min-width: 768px) 55vw, 90vw",
          className: "hero__image",
          loading: "eager"
        } %}
      {% else %}
        <div class="hero__placeholder" role="presentation"></div>
      {% endif %}
    </div>
  </section>
  <section class="story-body prose">
    {{ content | safe }}
  </section>
  {% if afterHero and afterHero.image %}
      <div class="story-visual__media">
        {% image afterHero.image, afterHero.alt or '', {
          sizes: "(min-width: 1200px) 920px, (min-width: 768px) 80vw, 95vw",
          className: "story-visual__image",
          loading: "lazy"
        } %}
      </div>
      {% if afterHero.caption %}
        <p class="story-visual__caption">{{ afterHero.caption }}</p>
      {% endif %}
    </section>
  {% endif %}
  <section class="story-afterword" data-observe>
    <div class="afterword__inner">
      <h2>What did you think?</h2>
      <p>Share your thoughts and join the conversation on social media. Did the ending surprise you? How can we avoid this?</p>
      <div class="afterword__actions">
        <a class="button" href="https://www.linkedin.com/shareArticle?mini=true&url={{ site.url }}" target="_blank" rel="noopener">Discuss on LinkedIn</a>
        <a class="button" href="https://twitter.com/intent/tweet?text={{ title | urlencode }} by {{ site.author.name | urlencode }}&url={{ site.url }}" target="_blank" rel="noopener">Share on X</a>
        <a class="button" href="https://bsky.app/intent/compose?text={{ title | urlencode }} by {{ site.author.name | urlencode }} {{ site.url }}{{ page.url }}" target="_blank" rel="noopener">Share on BlueSky</a>
        <a class="button" href="https://api.whatsapp.com/send?text={{ site.url }}" target="_blank" rel="noopener">WhatsApp</a>
        <a class="button button--ghost" href="/about/">About the Author</a>
      </div>
    </div>
  </section>
</article>
{% endblock %}
