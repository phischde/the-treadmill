{% extends "./base.njk" %}

{% block content %}
<article class="story" data-progress-target>
  <section class="hero" data-observe>
    <div class="hero__media">
      {% if hero and hero.image %}
        {% image hero.image, hero.alt or '' , {
          sizes: "(min-width: 1200px) 460px, (min-width: 900px) 40vw, (min-width: 768px) 55vw, 90vw",
          className: "hero__image",
          loading: "eager"
        } %}
      {% else %}
        <div class="hero__placeholder" role="presentation"></div>
      {% endif %}
    </div>
  </section>
  <section class="story-body prose" data-reading-time="{{ readingTime }}">
    {{ content | safe }}
  </section>
  {% if afterHero and afterHero.image %}
      <div class="story-visual__media">
        {% image afterHero.image, afterHero.alt or '', {
          sizes: "(min-width: 1200px) 920px, (min-width: 768px) 80vw, 95vw",
          className: "story-visual__image",
          loading: "lazy"
        } %}
      </div>
      {% if afterHero.caption %}
        <p class="story-visual__caption">{{ afterHero.caption }}</p>
      {% endif %}

  {% endif %}
  <section class="story-afterword" data-observe>
    <div class="afterword__inner">
      <h2>{{ afterword.heading }}</h2>
      <p>{{ afterword.description }}</p>
      <div class="afterword__actions">
        <h3>{{ afterword.cta }}</h3>
        <div class="afterword__buttons">
        <p>{{ afterword.shareText | safe }}</p>
          <div class="afterword__share">
            <a class="button" href="https://www.linkedin.com/shareArticle?mini=true&url={{ site.url }}{{ page.url }}%3Futm_source%3Dlinkedin%26utm_medium%3Dsocial%26utm_campaign%3Dstory-share" target="_blank" rel="noopener" data-share="linkedin">LinkedIn</a>
            <a class="button" href="https://twitter.com/intent/tweet?text={{ title | urlencode }} by {{ site.author.name | urlencode }}&url={{ site.url }}{{ page.url }}%3Futm_source%3Dx%26utm_medium%3Dsocial%26utm_campaign%3Dstory-share&hashtags=TheTreadmillStory" target="_blank" rel="noopener" data-share="x">X</a>
            <a class="button" href="https://bsky.app/intent/compose?text={{ title | urlencode }} by {{ site.author.name | urlencode }} {{ site.url }}{{ page.url }}%3Futm_source%3Dbluesky%26utm_medium%3Dsocial%26utm_campaign%3Dstory-share %23TheTreadmillStory" target="_blank" rel="noopener" data-share="bluesky">BlueSky</a>
            <a class="button" href="https://www.facebook.com/sharer/sharer.php?u={{ site.url }}{{ page.url }}%3Futm_source%3Dfacebook%26utm_medium%3Dsocial%26utm_campaign%3Dstory-share" target="_blank" rel="noopener" data-share="facebook">Facebook</a>
            <a class="button" href="https://api.whatsapp.com/send?text={{ title | urlencode }} by {{ site.author.name | urlencode }} {{ site.url }}{{ page.url }}%3Futm_source%3Dwhatsapp%26utm_medium%3Dsocial%26utm_campaign%3Dstory-share %23TheTreadmillStory" target="_blank" rel="noopener" data-share="whatsapp">WhatsApp</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</article>
{% endblock %}
